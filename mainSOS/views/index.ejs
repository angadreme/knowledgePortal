        <div class="choice row" ng-controller="indexController as controller">
          <div class="wrap">
            <div class="col-xs-6">
              <div class="box-outer full-height">
                <div class="box-inner">
                  <button class="custom-btn custom-btn-info ripple" ng-click="controller.isAdmin()">Administrator</button>
                </div>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="box-outer full-height">
                <div class="box-inner">
                  <button class="custom-btn custom-btn-go ripple" ng-click="controller.isStudent()">Student</button>
                </div>
              </div>
            </div>
          </div>
        </div>


      <ui-view></ui-view>

  <script src="/bower_components/angular/angular.min.js"></script>
