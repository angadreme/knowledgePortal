<body>
  <div class="container" id="header"> <!-- page header -->
    <div class="row">
      <div class="wrap">

        <div class="col-xs-7">
          <div class="box-outer">
            <div class="box-inner">
              <a ui-sref="home"><img src="logorosa.png" alt="knowledge"></a>
            </div>
          </div>
        </div>

        <div class="col-xs-5">
          <form ng-controller="indexController as controller">
            <div class="input-group">
              <input type="text" class="form-control" ng-model="controller.searchString" placeholder="Search...">
              <span class="input-group-btn">
                <button class="custom-btn-utility custom-btn-utility-info ripple" type="button" ng-click="controller.goToSearch()"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
              </span>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div> <!-- end page header -->

